<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fnoc.orcamento.orcamento.MainActivity">

    <LinearLayout
        android:id="@+id/col1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/txPiso"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingTop="30dp"
            android:text="@string/txPiso"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/vlPiso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:padding="5dp"
            android:paddingBottom="20dp"
            android:paddingTop="30dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text="@string/vlPiso"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnPiso"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/plus"
            android:padding="5dp"
            android:paddingBottom="20dp"
            android:paddingTop="30dp"
            android:text="@string/btnPiso" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/col2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txParede"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingBottom="15dp"
            android:paddingLeft="10dp"
            android:paddingTop="30dp"
            android:text="@string/txParede"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/vlParede"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number"
            android:padding="10dp"
            android:paddingTop="30dp"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:text="@string/vlParede"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnParde"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/plus"
            android:padding="10dp"
            android:paddingTop="30dp"
            android:text="@string/btnParede" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/col3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:paddingLeft="10dp"
            android:paddingTop="200dp"
            android:text="@string/txTotal"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/vlTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="bottom"
            android:inputType="textPersonName"
            android:paddingTop="200dp"
            android:text="@string/vlTotal" />
    </LinearLayout>
</LinearLayout>
